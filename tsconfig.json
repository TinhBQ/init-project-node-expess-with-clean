{
  "compilerOptions": {
    // "target": "ESNext",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    // "moduleResolution": "NodeNext",
    "module": "CommonJS",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@adapters/*": ["./src/adapters/*"],
      "@common/*": ["./src/common/*"],
      "@config/*": ["./src/config/*"],
      "@core/*": ["./src/core/*"],
      "@infra/*": ["./src/infrastructure/*"]
    },
    "sourceMap": true,
    "outDir": "./dist",
    "noEmitOnError": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
